<div class="row">
  <div class="col-lg-12">
    <%= form_for( @comment, html: { class: 'form-horizontal', role: 'form', multipart: true, id: "comment_#{@comment.id}" } ) do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_area :title, { class: 'form-control', readonly: readonly } %>
        </div>

        <div class="form-group">
          <%= f.label :comment %>
          <%= f.text_area :comment, { class: 'form-control', readonly: readonly } %>
        </div>

        <div class="actions">
          <button class="btn btn-primary btn-xs" name="commit" type="submit">OK</button>
          <%= link_to 'Cancel', "/posts/#{@post.id}", { :class=>"form-back btn btn-default btn-xs" } %>

        </div>

  <% end %>
  </div>
</div>
