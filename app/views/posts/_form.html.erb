<div class="row">
  <div class="col-lg-12">
    <%= form_for( @post, html: { class: 'form-horizontal', role: 'form', multipart: true, id: "post_#{@post.id}" } ) do |f| %>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, { class: 'form-control', readonly: readonly } %>
        </div>

        <% if @post.comments && @post.comments.length != 0 %>
            <div class="panel panel-info">
              <div class="panel-heading"><h3 class="panel-title">Comments</h3></div>
              <div class="panel-body">

                <% @post.comments.each do |c| %>
                    <div class="actions">
                      <%= link_to 'Delete', "/comments/#{c.id}", method: :delete, class: 'btn btn-default btn-xs', data: { confirm: 'Are you sure you want to delete this comment?' } %>
                    </div>
                    <div class="form-group">
                      <%= text_area_tag :title, c.title, { class: 'form-control', readonly: readonly } %>
                    </div>
                    <div class="form-group">
                      <%= text_area_tag :comment, c.comment, { class: 'form-control', readonly: readonly } %>
                    </div>
                <% end %>

              </div>
            </div>

        <% end %>

  <% end %>
  </div>
</div>
